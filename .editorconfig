root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.{md,org}]
max_line_length = 0
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.go]
max_line_length = 80 ; Just for comments

[{Makefile,*.bash}]
indent_size = 2
max_line_length = 80
